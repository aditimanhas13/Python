def add(numbers):
    return sum(numbers)

def subtract(numbers):
    total = numbers[0]
    for num in numbers[1:]:
        total -= num
    return total

def multiply(numbers):
    total = 1
    for num in numbers:
        total *= num
    return total

def divide(numbers):
    total = numbers[0]
    try:
        for num in numbers[1:]:
            total /= num
    except ZeroDivisionError:
        return "Error: Division by zero!"
    return total

def calculator():
    print("Welcome to Mini Calculator!")
    print("Available operations: add(+), subtract(-), multiply(*), divide(/)")
    print("Type 'exit' to quit the calculator.\n")
    
    print("\n========== MINI CALCULATOR ==========")
    while True:
        operation = input("Enter operation: ").lower()
        if operation == 'exit':
            print("\n‚ú®üëã Goodbye! Thanks for using the calculator! ‚ú®\n")
            break
        
        numbers_input = input("Enter numbers separated by space: ").split()
        try:
            numbers = [int(num) for num in numbers_input]
        except ValueError:
            print(f"‚ùå Invalid input! Please enter numbers only.\n")
            continue
        
        if operation == "+":
            result = add(numbers)
        elif operation == "-":
            result = subtract(numbers)
        elif operation == "*":
            result = multiply(numbers)
        elif operation == "/":
            result = divide(numbers)
        else:
            print("Invalid operation! Try again.")
            continue
        
        print(f"‚úÖ Result: {result}\n")

# Run the calculator
calculator()
